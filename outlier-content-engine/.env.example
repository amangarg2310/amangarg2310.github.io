# ── Active Vertical ──
# Set the vertical name to use (must match a vertical created in the dashboard)
ACTIVE_VERTICAL=Streetwear

# ── Competitor Data Source (Apify) ──
APIFY_API_TOKEN=your_apify_token_here

# ── LLM (OpenAI) ──
OPENAI_API_KEY=sk-your_openai_key_here

# ── Email (Gmail SMTP) ──
# IMPORTANT: Use a Gmail App Password, NOT your regular password.
# Enable 2-Step Verification, then generate an App Password at:
# https://myaccount.google.com/apppasswords
EMAIL_ADDRESS=you@gmail.com
EMAIL_APP_PASSWORD=your_gmail_app_password_here
EMAIL_RECIPIENTS=recipient1@gmail.com,recipient2@gmail.com

# ── Flask Dashboard ──
# Generate a secure key: python -c "import os; print(os.urandom(32).hex())"
# If not set, a random key is generated each restart (sessions won't persist across restarts)
# FLASK_SECRET_KEY=your_secret_key_here

# ── Cost Control ──
MONTHLY_COST_LIMIT_USD=4.50

# ── Logging ──
LOG_LEVEL=INFO
